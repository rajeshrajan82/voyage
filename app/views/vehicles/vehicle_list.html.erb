<div class="span3" id="sidebar">
  <% if @vehicle != nil && @vehicle.id != nil %>
    <%= render "edit" %>
  <% else %>
    <%= render "new" %>
  <% end %>
</div>

<div class="span9" id="content">
  <div class="row-fluid">
    <div id="breadcrumb">
      <ul class="breadcrumb">
        <li><%= link_to "Home", root_path %><span class="divider">/</span></li>
        <% if current_user.user_type == User::ADMIN %>
          <li><%= link_to "Customers", customers_path %><span class="divider">/</span></li>
        <% end %>  
        <li class="active">Vehicles</li>
      </ul>
    </div>
    <div class="block">
      <div class="navbar navbar-inner block-header">
        <table class="table table-bordered table-hover">
          <caption>Vechile List of <%= @customer.travels_name %></caption>
          <thead>
            <tr>
              <th>Vehicle No:</th>
              <th>Name</th>
              <th></th>
            </tr>
          </thead>
          <tbody>
            <% @vehicles.each do |vehicle| %>
            <tr>
              <td><%= vehicle.v_no %></td>
              <td><%= vehicle.v_name %></td>
              <td class="text-center">
                <%= link_to icon_text("Edit","icon-pencil"), edit_vehicle_path(:id => @user.uuid, :vid => vehicle.uuid) %>
                &nbsp;|&nbsp;<%= link_to icon_text("Delete","icon-remove"), destroy_vehicle_path(:id => @user.uuid, :vid => vehicle.uuid), :confirm => "Are you sure you want to delete this vehicle?" %>
                &nbsp;|&nbsp;<%= link_to icon_text("Routes","icon-road"), route_list_path(:id => @user.uuid, :vid => vehicle.uuid) %>
              </td>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
